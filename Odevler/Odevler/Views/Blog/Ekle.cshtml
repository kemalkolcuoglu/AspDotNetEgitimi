@model Blog

@if (ViewBag.Hata != null)
{
  <div class="alert alert-danger" role="alert">
    @ViewBag.Hata
  </div>
}
<div>
  @using (Html.BeginForm())
  {
    <div>
      @Html.LabelFor(x => x.Baslik)
      @Html.EditorFor(x => x.Baslik)
    </div>
    <div>
      @Html.LabelFor(x => x.Yazar)
      @Html.EditorFor(x => x.Yazar)
    </div>
    <div>
      @Html.LabelFor(x => x.Tarih)
      @Html.EditorFor(x => x.Tarih)
    </div>
    <div>
      @Html.LabelFor(x => x.Icerik)
      @Html.EditorFor(x => x.Icerik)
    </div>
    <div>
      <input class="btn btn-success" type="submit" name="Onayla" value="Onayla" />
    </div>
  }
</div>