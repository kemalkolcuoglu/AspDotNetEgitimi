@model Anket
@{
}

@if (ViewBag.Hata != null)
{
  <div class="alert alert-danger" role="alert">
    @ViewBag.Hata
  </div>
}
<div>
  @using (Html.BeginForm())
  {
    <div>
      @Html.LabelFor(x => x.Soru)
      @Html.EditorFor(x => x.Soru)
    </div>
    <div>
      @Html.LabelFor(x => x.ASikki)
      @Html.EditorFor(x => x.ASikki)
    </div>
    <div>
      @Html.LabelFor(x => x.BSikki)
      @Html.EditorFor(x => x.BSikki)
    </div>
    <div>
      @Html.LabelFor(x => x.CSikki)
      @Html.EditorFor(x => x.CSikki)
    </div>
    <div>
      @Html.LabelFor(x => x.DSikki)
      @Html.EditorFor(x => x.DSikki)
    </div>
    <div>
      <input class="btn btn-success" type="submit" name="Onayla" value="Onayla" />
    </div>
  }
</div>