@model Icerik

@{
  ViewData["Title"] = "İçerik Ekle";
}

<h1>İçerik Ekle</h1>
<hr />
<div class="row">
  <div class="col-md-12">
    <form asp-action="Ekle" asp-controller="Icerik" asp-area="Yonetici" method="post">
      <div asp-validation-summary="ModelOnly" class="text-danger"></div>
      <div class="form-group">
        <label asp-for="SayfaID" class="control-label"></label>
        <select asp-for="SayfaID" class="form-control" asp-items="ViewBag.Sayfalar"></select>
      </div>
      <div class="form-group">
        <label asp-for="EtiketList" class="control-label"></label>
        <select asp-for="EtiketList" class="form-control" asp-items="ViewBag.Etiketler" multiple></select>
      </div>
      <div class="form-group">
        <label asp-for="Baslik" class="control-label"></label>
        <input asp-for="Baslik" class="form-control" />
        <span asp-validation-for="Baslik" class="text-danger"></span>
      </div>
      <div class="form-group">
        <label asp-for="Detay" class="control-label"></label>
        <textarea asp-for="Detay" id="summernote" class="form-control"></textarea>
        <span asp-validation-for="Detay" class="text-danger"></span>
      </div>
      <div class="form-group">
        <label asp-for="Gorsel" class="control-label"></label>
        <input asp-for="Gorsel" type="file" class="form-control" />
        <span asp-validation-for="Gorsel" class="text-danger"></span>
      </div>
      <div class="form-group">
        <label asp-for="SEOTitle" class="control-label"></label>
        <input asp-for="SEOTitle" class="form-control" />
        <span asp-validation-for="SEOTitle" class="text-danger"></span>
      </div>
      <div class="form-group">
        <label asp-for="SEODescription" class="control-label"></label>
        <input asp-for="SEODescription" class="form-control" />
        <span asp-validation-for="SEODescription" class="text-danger"></span>
      </div>
      <div class="form-group">
        <label asp-for="EkAlan" class="control-label"></label>
        <input asp-for="EkAlan" class="form-control" />
        <span asp-validation-for="EkAlan" class="text-danger"></span>
      </div>
      <div class="form-group form-check">
        <label class="form-check-label">
          <input class="form-check-input" asp-for="Etkin" /> @Html.DisplayNameFor(model => model.Etkin)
        </label>
      </div>
      <div class="form-group">
        <input type="submit" value="Onayla" class="btn btn-primary" />
      </div>
    </form>
  </div>
</div>

<div>
  <a asp-action="Liste" class="btn btn-primary">Listeye Dön</a>
</div>

@section Styles{
  <link href="~/Yonetici/vendor/summernote-0.8.18-dist/summernote.min.css" rel="stylesheet">
}

@section Scripts {
  @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
  <script src="~/Yonetici/vendor/summernote-0.8.18-dist/summernote.min.js"></script>
  <script src="~/Yonetici/vendor/summernote-0.8.18-dist/lang/summernote-tr-TR.js"></script>
  <script>
    $(document).ready(function () {
      $('#summernote').summernote({
        placeholder: 'Hello Bootstrap 4',
        tabsize: 2,
        height: 100,
        lang: 'tr-TR'
      });
    });
  </script>
}
