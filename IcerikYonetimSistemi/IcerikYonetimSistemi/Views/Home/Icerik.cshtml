@model Icerik
@{
}

<div class="row">
  <div class="col-md-12">
    <h1>@Model.Baslik </h1>
    <h5>@Model.EklemeTarihi.ToString("dd MMMM yyyyy")</h5>
  </div>
  <div class="col-md-12">
    <img src="~/default/images/blog/@Model.Gorsel" />
  </div>
  <div class="col-md-12">
    @Html.Raw(Model.Detay)
  </div>
</div>
<br /><br />
<partial name="_YorumEkle" />
<div class="row">
  <div class="col-md-12">
    <div class="card">
      <div class="card-header">
        Yorumlar
      </div>
      <ul class="list-group list-group-flush">
        @foreach (var item in Model.Yorumlar)
        {
          <li class="list-group-item">@item.KullaniciID - @item.Tarih: @item.Metin</li>
        }
      </ul>
    </div>
  </div>
</div>