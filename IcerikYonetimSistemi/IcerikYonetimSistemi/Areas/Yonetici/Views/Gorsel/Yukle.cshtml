
@{
    ViewData["Title"] = "Görsel Yükle";
}

<h1>Görsel Yükle</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Yukle" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Baslik</label>
                <input name="baslik" class="form-control" />
            </div>
            <div class="form-group">
              <label class="control-label">Dosya</label>
              <input name="dosya" type="file" class="form-control" />
            </div>
            <div class="form-group">
              <input type="submit" value="Yükle" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Liste">Listeye Dön</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
