@model AlinanVeri

<div class="container">
  <div class="row">
    <div class="col-md-12">
      @using (Html.BeginForm())
      {
        <div>
          @Html.LabelFor(x => x.Sayi)
        </div>
        <div>
          @Html.TextBoxFor(x => x.Sayi)
        </div>
        <div>
          @Html.LabelFor(x => x.Yazi)
        </div>
        <div>
          @Html.TextBoxFor(x => x.Yazi)
        </div>
        <br /><br />
        <input type="submit" name="onayla" value="onayla" />
      }
    </div>
  </div>
</div>

@if (ViewBag.veri != null)
{
<p>Veri: @ViewBag.veri</p>
}
@if(ViewBag.Hata != null)
{
  <p style="color:#FF0000"><b>@ViewBag.Hata</b></p>
}